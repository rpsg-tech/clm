{
    "version": 2,
    "builds": [
        {
            "src": "apps/user-app/package.json",
            "use": "@vercel/next"
        },
        {
            "src": "apps/backend/api/index.ts",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/v1/(.*)",
            "destination": "/apps/backend/api/index"
        }
    ],
    "crons": [
        {
            "path": "/api/v1/cron/contract-expiry",
            "schedule": "0 0 * * *"
        }
    ]
}