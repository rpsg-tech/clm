{
    "version": 2,
    "builds": [
        {
            "src": "apps/user-app/package.json",
            "use": "@vercel/next"
        },
        {
            "src": "apps/backend/src/vercel.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/v1/(.*)",
            "dest": "/apps/backend/src/vercel.ts"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/apps/user-app/$1"
        }
    ],
    "crons": [
        {
            "path": "/api/v1/cron/contract-expiry",
            "schedule": "0 0 * * *"
        }
    ]
}