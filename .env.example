# ==============================================================================
# LUMINA CLM - Environment Variables Example
# Copy this file to .env and fill in the actual values
# ==============================================================================

# ------------------------------------------------------------------------------
# 1. CORE SETTINGS
# ------------------------------------------------------------------------------
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000

# ------------------------------------------------------------------------------
# 2. DATABASE (Prisma)
# ------------------------------------------------------------------------------
DATABASE_URL="postgresql://user:password@localhost:5432/clm_db?schema=public"

# ------------------------------------------------------------------------------
# 3. REDIS & QUEUE (BullMQ)
# ------------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ------------------------------------------------------------------------------
# 4. AUTHENTICATION & SECURITY
# ------------------------------------------------------------------------------
JWT_SECRET=super-secret-random-string-at-least-32-chars
JWT_EXPIRES_IN=1d

# ------------------------------------------------------------------------------
# 5. STORAGE (AWS S3)
# ------------------------------------------------------------------------------
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_REGION=us-east-1
S3_BUCKET_NAME=your-clm-bucket
S3_FORCE_PATH_STYLE=false # Set to true for LocalStack/Minio

# ------------------------------------------------------------------------------
# 6. EMAIL (SendGrid SMTP - Recommended)
# ------------------------------------------------------------------------------
# UseLiterally "apikey" as user, and your API key as password
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=SG.your-sendgrid-api-key-here

# Global Email Settings
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME="LUMINA CLM"

# ------------------------------------------------------------------------------
# 7. NOTIFICATION SETTINGS
# ------------------------------------------------------------------------------
LEGAL_APPROVER_EMAIL=legal@yourcompany.com
FINANCE_APPROVER_EMAIL=finance@yourcompany.com

# ------------------------------------------------------------------------------
# 8. AI ORACLE (Google Gemini / Vertex AI)
# ------------------------------------------------------------------------------
AI_MODEL_NAME=gemini-1.5-pro
AI_API_KEY=your-google-cloud-api-key
VERTEXT_AI_PROJECT_ID=your-project-id
VERTEX_AI_LOCATION=us-central1
